[user]
	email = alessio.raviola.98@gmail.com
	name = Alessio Raviola
[gpg]
	program = gpg
[commit]
	gpgSign = false
[tag]
	forceSignAnnotated = false
[init]
	defaultBranch = main
[core]
	editor = nvim
[diff]
    tool = nvimdiff
[merge]
    tool = nvimdiff
[pull]
    rebase = false
[alias]
    ss = status
    ci = commit
    br = branch

    difft = difftool
    merget = mergetool

	unstage = reset HEAD --
    last = log -1 HEAD
    logh = log --oneline --decorate --graph --all
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
